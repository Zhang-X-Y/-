/* pages/fenlei/fenlei.wxss */
.inp1{
  width: 80%;
  height: 25px;
  border: 1px solid #eee;
  border-radius: 15px;
  margin: 0 auto;
  padding-left: 5px;
}
.fen-box{
  display: flex;
}
.fen-con1{
  width: 25%;
  height:1200rpx;
  overflow-y: auto; 
}
.fen-con1>.z-l{
  width: 100%;
  border-right: 1px solid #eee;
}
.fen-con1>.z-l>view{
  width: 100%;
  height: 130rpx;
  text-align: center;
  line-height: 45px;
}
.fen-con2{
  width: 75%;
  height: 1200rpx;
  overflow-y:auto;
}
.fen-con2>.z-r{
   width: 100%;
}
.fen-con2>.z-r>view{
  width: 100%;
  height: 150rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.z-r>view>image{
  width: 50px;
  height: 50px;
}
.z-r>view>.z-box{
  width: 180px;
}
.z-box>view:nth-of-type(1){
  font-size: 14px;
  font-weight: 700;
}
.z-box>view:nth-of-type(2){
  font-size: 12px;
  font-weight: 700;
  color: red;
}
.z-box>view:nth-of-type(3){
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.z-box>view:nth-of-type(3)>view:nth-of-type(1){
  padding:1px 2px;
  border:1px solid red;
  color: red;
}
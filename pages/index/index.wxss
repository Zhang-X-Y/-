.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.banner>image{
  width: 100%;
  height: 100%;
}

.text{
  padding:0 10px; 
  height: 70rpx;
  display: flex;
  border-bottom: 1px solid #ebebeb;
  align-items: center;
  justify-content: space-between;
  font-size:12px;
  color: #797979;
}
.text>view:nth-of-type(1){
  display: flex;
}
.text>view:nth-of-type(1)>image{
  width: 15px;
  height: 15px;
}
.text>view:nth-of-type(1)>view{
  color: red;
}
